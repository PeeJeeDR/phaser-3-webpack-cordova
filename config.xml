<?xml version='1.0' encoding='utf-8'?>
<widget id="custom.project.id" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Phaser 3 Webpack Cordova</name>
    <description>
        A template boilerplate for making phaser 3 projects (could be other projects) and build them for android and ios (or browser) using Webpack and Cordova.
    </description>
    <author email="author@author.be" href="http://to.author.com">
        Author name
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
